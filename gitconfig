[alias]
	gl = log --graph --decorate --pretty=oneline --abbrev-commit --all --date-order
	glb = log --graph --decorate --pretty=oneline --abbrev-commit
	gla = !trap "" 13 && git log --graph --oneline --decorate --all $(git reflog | awk '{print $1}')
	b = branch
	d = diff
	dc = diff --cached
	st = status -sb
	s = status -s
	ci = commit
	cian = commit --amend --no-edit
	co = checkout
	ff = merge --ff-only
	mnff = merge --no-ff
	mff = merge --ff-only
	mnffn = merge --no-ff --no-edit
	pr = pull --rebase
	pff = pull --ff-only
	pnff = pull --no-ff

